    "hyprland/window": {
        "format": "{}"
    },
    "wlr/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}",
        "format-icons": {
            "1": "ÔÑë",
            "2": "ÔÑë",
            "3": "ÔÑë",
            "4": "ÔÑë",
            "5": "ÔÑë",
            "urgent": "ÔÅ™",
            "active": "ÔÑë",
            "default": "ÔÑë"
          }
    },
    // "cpu": {
    //     "interval": 10,
    //     "format": "Ôò¶ {}%",
    //     "max-length": 10,
    //     "on-click": ""
    // },
    // "memory": {
    //     "interval": 30,
    //     "format": "Ôò™ {}%",
    //     "format-alt":"Ôë≤ {used:0.1f}G",
    //     "max-length": 10
    // },
    "custom/updates": {
        "exec": "(paru -Qua) | wc -l",
        "interval": 7200,
        "format": "Ôõô {}"
    },
    // "custom/language": {
    //     "exec": "cat /tmp/kb_layout",
    //     "interval": 3,
    //     "format": "Ô†ã {}",
    //     "tooltip": false
    // },
    "custom/quotes" : {
        // "tooltip" : true,
        "format" : "{}",
        "restart-interval" : 1500,
        "exec" : "~/.config/waybar/scripts/waybar-quotes.py",
        "return-type" : "json"
    },
    "custom/monitor" : {
        "tooltip" : false,
        "format" : "üîÖ",
        // "restart-interval" : 10,
        // "exec" : "~/.config/waybar/scripts/monitor-brightness.sh",
        "on-click": "sudo ddcutil setvcp 10 100 --bus 4",
        "on-click-right": "sudo ddcutil setvcp 10 20 --bus 4",
        "on-click-middle": "sudo ddcutil setvcp 10 60 --bus 4",
        "scroll-step": 10
        // "return-type" : "json"
    },
    "custom/weather" : {
        "tooltip" : true,
        "format" : "{}",
        "restart-interval" : 300,
        "exec" : "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type" : "json"
    },
    "tray": {
        "icon-size": 13,
        "tooltip": false,
        "spacing": 10
    },
    "clock": {
        "format": "{:ÔÄó %R  ÔÅ≥ %d/%m}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
        "on-click": "amixer set Master toggle",
        "on-scroll-up": "amixer set 'Master' 5%+",
        "on-scroll-down": "amixer set 'Master' 5%-",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "tooltip": false,
        "format-source": "Ô°´ {volume}%",
        "format-source-muted": "Ô°¨ Muted",
        "on-click": "amixer set Capture toggle",
        "on-scroll-up": "amixer set 'Capture' 5%+",
        "on-scroll-down": "amixer set 'Capture' 5%-",
        "scroll-step": 5
    }
}
